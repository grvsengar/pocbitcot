<div class="container mt-5">
  <h1>Notes</h1>

  <%= link_to 'New Note', new_note_path, class: "btn btn-primary mb-3" %>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Content</th>
        <th>Group</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.content %></td>
          <td><%= note.group.name %></td>
          <td><%= link_to 'Show', note, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_note_path(note), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>